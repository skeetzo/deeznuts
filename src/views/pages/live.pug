extends ../layout/page

prepend content
  // this is a square of video
  .row
    .col-xs-12
      video#preview(controls, autoplay, poster='/images/preview.jpg', width=500)

  include ../include/crypto-live

  include ../include/time

  append javascript

    script(src="//cdn.dashjs.org/latest/dash.all.min.js")

    video(data-dashjs-player autoplay src="https://localhost:8080/live/manifest.mpd" controls)
    

    script.
      $(document).ready(function () {
        //- updates time if live
        var countdown = setInterval(function () {
          var seconds = parseInt($("#timeseconds").text());
          if ($("#status").text()=="Live"&&seconds>0) {
            seconds--;
            $("#time").text(toTime(seconds));
            $("#timeseconds").text(seconds);   
          }
          else if (seconds<=0) {
            clearInterval(countdown);
            alert('Times up!');
            window.location.replace("#{domain}/");
          }
        },1000);
      });