.row
  .col-xs-12
    if (user&&user.address_qr)
      //- explanation
      p  To Add Time, Pay >=$1 in Bitcoin (BTC) to:
      //- link
      img(src=user.address_qr,style="display:block;margin-left:auto;margin-right:auto;")
      a(href="bitcoin:"+user.address, target="_blank") bitcoin:#{user.address}
    else
      button.btn.btn-primary(onclick="generateLiveAddress()") Generate Address

      script.
        function generateLiveAddress() {
          return Promise.resolve($.ajax({
            type: 'GET',
            url: '/address-live',
            data: {'_csrf':"#{_csrf}"},
            success: function(data) {
              location.reload();
            },
            error: function(data) {
              alert("Please login or create an account!");
            },
          })).catch(function (reason) {
            //- console.log(reason);
          });
        }